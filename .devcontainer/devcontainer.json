// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/JuliaLang/devcontainer-templates/tree/main/src/julia
{
    "name": "Mycelia Development Container",
    // https://hub.docker.com/r/microsoft/devcontainers-base
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
    // can specify specific version if desired
    // "mcr.microsoft.com/devcontainers/base:ubuntu-22.04",
    // also works
    // "image": "mcr.microsoft.com/devcontainers/base:debian",
    // "image": "mcr.microsoft.com/devcontainers/base:debian-12",
    // default in GitHub codespaces but wasn't working on mac with M1 chip
    // "image": "mcr.microsoft.com/devcontainers/universal:2",
    // for when/if I need more configuration than the base images provide
    // "build": {
    //     "dockerfile": "Dockerfile"
    // },
	// Features to add to the dev container. More info: https://containers.dev/features.
	"features": {
		// A Feature to install Julia via juliaup. More info: https://github.com/JuliaLang/devcontainer-features/tree/main/src/julia.
		"ghcr.io/julialang/devcontainer-features/julia:1": {
            "channel": "lts"
        },
        "ghcr.io/devcontainers/features/python:1": {
            "installTools": true,
            "version": "os-provided"
        },
        "ghcr.io/devcontainers/features/node:1": {
            "nodeGypDependencies": true,
            "installYarnUsingApt": true,
            "version": "lts",
            "pnpmVersion": "latest",
            "nvmVersion": "latest"
        },
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installVim": true
        }
	},
    "waitFor": "postCreateCommand",
    // "updateContentCommand": "python3 -m pip install -r requirements.txt",
    // "postCreateCommand": "",
	"customizations": {
        "codespaces": {
            "openFiles": []
          },
		"vscode": {
			"extensions": [
                "julialang.language-julia",
                "ms-python.python",
                "ms-toolsai.jupyter",
                "quarto.quarto",
                "ms-toolsai.vscode-jupyter-slideshow",
                "ms-toolsai.jupyter-renderers",
                "ms-toolsai.jupyter-keymap",
                "ms-toolsai.vscode-jupyter-cell-tags",
                "GitHub.copilot-chat",
                "GitHub.copilot",
                "tamasfe.even-better-toml",
                "ms-azuretools.vscode-docker",
                "google.gemini-cli-vscode-ide-companion",
                "Anthropic.claude-code",
                "kilocode.kilo-code",
                "ms-azuretools.vscode-containers",
                "vscodevim.vim",
                "DavidAnson.vscode-markdownlint"
            ]
        }
    },
    "postCreateCommand": "sudo apt-get update && sudo apt-get install -y vim && bash .devcontainer/setup.sh && julia --project=. -e 'using Pkg; Pkg.update(); Pkg.instantiate(); Pkg.precompile(); import Mycelia'"
    // "postStartCommand": "",
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Configure tool-specific properties.
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
